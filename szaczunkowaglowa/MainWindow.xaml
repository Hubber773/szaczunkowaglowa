<Window x:Class="MakaronWlosowy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szacowanie Gęstości Włosów" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Obwód Głowy (cm):" />
            <TextBox x:Name="HeadCircumference" Text="56" Margin="0,0,0,10"/>
            <TextBlock Text="Wysokość Czoła (cm):" />
            <TextBox x:Name="ForeheadHeight" Text="8" Margin="0,0,0,10"/>
            <TextBlock Text="Powierzchnia Głowy (cm²):" />
            <TextBox x:Name="HeadArea" Text="500" Margin="0,0,0,10"/>
            <TextBlock Text="Gęstość Włosów (na cm²):" />
            <TextBox x:Name="HairDensity" Text="120" Margin="0,0,0,10"/>
            <Button Content="Oblicz na podstawie obwodu" Click="CalculateByCircumference" Margin="0,0,0,10"/>
            <Button Content="Oblicz na podstawie powierzchni" Click="CalculateByArea" Margin="0,0,0,10"/>
            <TextBlock x:Name="Result" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>